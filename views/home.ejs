<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/static/css/styles.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- navbar -->
    <%- include('navbar.ejs') %>
    <main class="container py-5 flex-grow-1">
        <section class="todo-list">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <!-- task form -->
                    <div class="task-form card mb-4 shadow-sm">
                        <div class="card-body">
                            <form class="d-flex gap-2" action="/" method="post">
                                <input type="text" name="taskAdd" class="task-card form-control" placeholder="Add new task..." required>
                                <button type="submit" class="btn btn-dark text-white">
                                    <i class="bi bi-plus-lg"></i> Add
                                </button>
                            </form>
                        </div>
                    </div>
                    <% if(tasks.length==0){ %>
                        <!-- (when no tasks) -->
                        <div class="text-center text-white py-5 d-block">
                            <i class="bi bi-check2-circle display-4 text-muted mb-3"></i>
                            <h5 class="text-muted">No tasks yet</h5>
                            <p class="text-muted">Add your first task using the form above</p>
                        </div>
                    <% }else{ %>
                        <% for(var i=0; i<tasks.length; i++){%>
                        <!-- Task Cards -->
                        <div class="task-form card mb-3 shadow-sm">
                            <div class="task-card card-body d-flex align-items-center">
                                <div class="form-check flex-grow-1 d-flex align-items-center gap-2" style="min-width: 0;">
                                    <input class="form-check-input flex-shrink-0" type="checkbox" id="task<%=i%>">
                                    <label class="form-check-label task-label <%= tasks.completed ? 'text-decoration-line-through text-muted' : '' %>" 
                                        for="task<%=i%>" style="word-break: break-word;">
                                        <%= tasks[i] %>
                                    </label>
                                </div>
                                <div class="btn-group flex-shrink-0">
                                    <a href="/edit/<%= i %>" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href="/delete/<%= i %>" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="card-footer text-muted small">
                                Created: <%= new Date().toLocaleString() %>
                            </div>
                        </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </section>
    </main>
    <!-- footer -->
    <%- include('footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>